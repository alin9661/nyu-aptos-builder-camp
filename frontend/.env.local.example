# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Aptos Network Configuration
NEXT_PUBLIC_APTOS_NETWORK=testnet
NEXT_PUBLIC_APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1

# Module Addresses (replace with your deployed addresses)
NEXT_PUBLIC_MODULE_ADDRESS=0x1

# Coin Type Configuration
# For testnet: LayerZero USDC
NEXT_PUBLIC_COIN_TYPE=0xf22bede237a07e121b56d91a491eb7bcdfd1f5907926a9e58338f964a01b17fa::asset::USDC
# USDC uses 6 decimals (APT uses 8)
NEXT_PUBLIC_COIN_DECIMALS=6
# Display symbol for the coin
NEXT_PUBLIC_COIN_SYMBOL=USDC

# Optional: Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Auth0 Configuration
# Generate a 32-character secret using: openssl rand -hex 32
AUTH0_SECRET=your_auth0_secret_here
# Base URL for your Next.js app (use http://localhost:3000 for development)
AUTH0_BASE_URL=http://localhost:3000
# Your Auth0 domain (find this in your Auth0 dashboard)
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
# Your Auth0 Application Client ID (find this in your Auth0 dashboard)
AUTH0_CLIENT_ID=your_client_id_here
# Your Auth0 Application Client Secret (find this in your Auth0 dashboard)
AUTH0_CLIENT_SECRET=your_client_secret_here
# Custom login route (required when using custom routes)
NEXT_PUBLIC_LOGIN_ROUTE=/api/auth/login
